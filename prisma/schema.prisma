// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  engineType = "binary"
}

datasource db {
  provider = "sqlite"
}

enum UserRole {
  SUPER_ADMIN
  ADMIN
  CHECKER
  OFFICER
}

enum ShiftType {
  MORNING
  AFTERNOON
  FULLTIME
  DAYOFF
  VACATION
}

model User {
  id                String   @id @default(cuid())
  fullName          String
  phone             String   @unique
  passwordHash      String
  role              UserRole @default(OFFICER)
  isActive          Boolean  @default(true)
  mustChangePassword Boolean @default(true)
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
  createdBy         String?

  shifts            Shift[]
  vacationRequests  VacationRequest[]
  weeklyDayOff      WeeklyDayOffPattern[]
  weeklyFullTime    WeeklyFullTimePattern[]
  weeklyLocked      WeeklyLockedShiftPattern[]
  shiftChoices      ShiftChoice[]
  paymentChecks     PaymentCheck[]
  auditLogs        AuditLog[]
  privilege        UserPrivilege?
}

model Shift {
  id        String    @id @default(cuid())
  date      DateTime
  type      ShiftType
  isLocked  Boolean   @default(false)
  createdAt DateTime  @default(now())

  userId    String?
  user      User?     @relation(fields: [userId], references: [id], onDelete: SetNull)

  @@index([date])
  @@index([userId])
  @@unique([userId, date])
}

model ShiftRule {
  id             String   @id @default(cuid())
  date           DateTime @unique
  morningLimit   Int
  afternoonLimit Int
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
}

model AutoScheduleSetting {
  id            String   @id @default(cuid())
  autoTime24    String   @default("19:00")
  timezone      String   @default("Africa/Mogadishu")
  updatedAt     DateTime @updatedAt
}

model WeeklyDayOffPattern {
  id        String   @id @default(cuid())
  userId    String
  dayOfWeek Int
  isActive  Boolean @default(true)
  createdAt DateTime @default(now())

  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, dayOfWeek])
}

model WeeklyFullTimePattern {
  id        String   @id @default(cuid())
  userId    String
  dayOfWeek Int
  isActive  Boolean @default(true)
  createdAt DateTime @default(now())

  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, dayOfWeek])
}

model WeeklyLockedShiftPattern {
  id        String    @id @default(cuid())
  userId    String
  dayOfWeek Int
  shiftType ShiftType
  isActive  Boolean   @default(true)
  createdAt DateTime  @default(now())

  user      User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, dayOfWeek, shiftType])
}

model VacationRequest {
  id         String   @id @default(cuid())
  userId     String
  startDate  DateTime
  endDate    DateTime
  status     String   @default("PENDING")
  createdAt  DateTime @default(now())
  reviewedAt DateTime?

  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model ShiftChoice {
  id        String   @id @default(cuid())
  userId    String
  date      DateTime
  choice    ShiftType
  createdAt DateTime @default(now())

  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, date])
  @@index([date])
}

model ScheduleLog {
  id        String   @id @default(cuid())
  date      DateTime @unique
  isAuto    Boolean  @default(false)
  createdAt DateTime @default(now())
}

enum PaymentType {
  PAYMENT_RECEIPT
  EVISA
}

enum PaymentStatus {
  FOUND
  NOT_FOUND
  ERROR
}

model RoleCreationPolicy {
  id         String   @id @default(cuid())
  role       UserRole @unique
  isAllowed  Boolean  @default(true) // allow create by non-super
  allowUpdate Boolean @default(true)
  allowDeactivate Boolean @default(true)
  allowDelete Boolean @default(false)
  allowPasswordReset Boolean @default(true)
  updatedAt  DateTime @updatedAt
  updatedBy  String?
}

model AuditLog {
  id         String   @id @default(cuid())
  actorId    String?
  action     String
  targetType String?
  targetId   String?
  metadata   Json?
  createdAt  DateTime @default(now())

  actor      User?    @relation(fields: [actorId], references: [id], onDelete: SetNull)

  @@index([createdAt])
  @@index([actorId])
}

model UserPrivilege {
  id                    String   @id @default(cuid())
  userId                String   @unique
  canCheckPayment       Boolean  @default(false)
  canCheckEVisa         Boolean  @default(false)
  canDownloadReceipt    Boolean  @default(false)
  canViewPaymentHistory Boolean  @default(false)
  canCreateUser         Boolean  @default(false)
  canUpdateUser         Boolean  @default(false)
  canDeleteUser         Boolean  @default(false)
  canResetPassword      Boolean  @default(false)
  canManageRoles        Boolean  @default(false)
  canManagePrivileges   Boolean  @default(false)
  canViewAuditLogs      Boolean  @default(false)
  canExportUsers        Boolean  @default(false)
  canManageSchedules    Boolean  @default(false)
  canManagePatterns     Boolean  @default(false)
  canApproveVacations   Boolean  @default(false)
  canManageSettings     Boolean  @default(false)
  canViewReports        Boolean  @default(false)
  createdAt             DateTime @default(now())
  updatedAt             DateTime @updatedAt

  user                  User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model PaymentCheck {
  id            String        @id @default(cuid())
  type          PaymentType
  serialNumber  String?
  passportNumber String?
  referenceNumber String?
  visaYear      String?
  visaMonth     String?
  status        PaymentStatus
  resultUrl     String?
  checkedBy     String
  checkedByUser User          @relation(fields: [checkedBy], references: [id], onDelete: Cascade)
  createdAt     DateTime      @default(now())
  
  @@index([checkedBy])
  @@index([createdAt])
}
