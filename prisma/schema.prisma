// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  engineType = "binary"
}

datasource db {
  provider = "sqlite"
}

enum UserRole {
  ADMIN
  OFFICER
}

enum ShiftType {
  MORNING
  AFTERNOON
  FULLTIME
  DAYOFF
  VACATION
}

model User {
  id                String   @id @default(cuid())
  fullName          String
  phone             String   @unique
  passwordHash      String
  role              UserRole @default(OFFICER)
  isActive          Boolean  @default(true)
  mustChangePassword Boolean @default(true)
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  shifts            Shift[]
  vacationRequests  VacationRequest[]
  weeklyDayOff      WeeklyDayOffPattern[]
  weeklyFullTime    WeeklyFullTimePattern[]
  weeklyLocked      WeeklyLockedShiftPattern[]
  shiftChoices      ShiftChoice[]
}

model Shift {
  id        String    @id @default(cuid())
  date      DateTime
  type      ShiftType
  isLocked  Boolean   @default(false)
  createdAt DateTime  @default(now())

  userId    String?
  user      User?     @relation(fields: [userId], references: [id], onDelete: SetNull)

  @@index([date])
  @@index([userId])
  @@unique([userId, date])
}

model ShiftRule {
  id             String   @id @default(cuid())
  date           DateTime @unique
  morningLimit   Int
  afternoonLimit Int
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
}

model AutoScheduleSetting {
  id            String   @id @default(cuid())
  autoTime24    String   @default("19:00")
  timezone      String   @default("Africa/Mogadishu")
  updatedAt     DateTime @updatedAt
}

model WeeklyDayOffPattern {
  id        String   @id @default(cuid())
  userId    String
  dayOfWeek Int
  isActive  Boolean @default(true)
  createdAt DateTime @default(now())

  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, dayOfWeek])
}

model WeeklyFullTimePattern {
  id        String   @id @default(cuid())
  userId    String
  dayOfWeek Int
  isActive  Boolean @default(true)
  createdAt DateTime @default(now())

  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, dayOfWeek])
}

model WeeklyLockedShiftPattern {
  id        String    @id @default(cuid())
  userId    String
  dayOfWeek Int
  shiftType ShiftType
  isActive  Boolean   @default(true)
  createdAt DateTime  @default(now())

  user      User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, dayOfWeek, shiftType])
}

model VacationRequest {
  id         String   @id @default(cuid())
  userId     String
  startDate  DateTime
  endDate    DateTime
  status     String   @default("PENDING")
  createdAt  DateTime @default(now())
  reviewedAt DateTime?

  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model ShiftChoice {
  id        String   @id @default(cuid())
  userId    String
  date      DateTime
  choice    ShiftType
  createdAt DateTime @default(now())

  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, date])
  @@index([date])
}
